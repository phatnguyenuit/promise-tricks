{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "lib": ["dom", "es2015", "es2018.promise"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "src/",
    "outDir": "dist"
  },
  "include": ["src"]
}
